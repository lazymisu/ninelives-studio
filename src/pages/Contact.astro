<section id="contact" class="w-full flex flex-col gap-8 px-4 md:px-12 xl:px-24 py-8 md:py-12 xl:py-20" style="background-color:var(--color-bg-section);">
    <h1 class="w-full text-left font-extrabold text-[8vw] leading-none tracking-tight uppercase mb-8" style="color:var(--color-primary);">
        NINE LIVES STUDIO
    </h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <article>
            <p class="text-sm font-bold" style="color:var(--color-text-main);">General Information</p>
            <p class="my-3 text-sm font-regular" style="color:var(--color-text-main);">Lorem ipsum...</p>
            <a
                class="font-medium underline"
                style="color:var(--color-primary);"
                href="mailto:info@ninelives.studio">info@ninelives.studio</a
            >
        </article>
        <article>
            <p class="text-sm font-bold" style="color:var(--color-text-main);">Bookings</p>
            <p class="my-3 text-sm font-normal" style="color:var(--color-text-main);">Lorem ipsum...</p>
            <a
                class="font-medium underline"
                style="color:var(--color-primary);"
                href="https://instagram.com/ninelives.studio" target="_blank">@ninelives.studio</a
            >
        </article>
        <article>
            <p class="text-sm font-bold" style="color:var(--color-text-main);">Socials</p>
            <div class="my-3 flex gap-4">
                <a
                    class="text-2xl"
                    style="color:var(--color-primary);"
                    href="https://instagram.com/ninelives.studio"
                    target="_blank"
                    aria-label="Instagram"
                >
                    <i class="fab fa-instagram"></i>
                </a>
                <a
                    class="text-2xl"
                    style="color:var(--color-primary);"
                    href="https://soundcloud.com/ninelives.studio"
                    target="_blank"
                    aria-label="SoundCloud"
                >
                    <i class="fab fa-soundcloud"></i>
                </a>
            </div>
        </article>
    </div>
</section>
