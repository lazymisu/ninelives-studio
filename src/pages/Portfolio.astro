    <div class="w-full flex flex-col">
      <ul class="w-full divide-y border-y border-fill divide-fill">
        {music.map((m) => <Preview {...m} />)}
      </ul>
    </div>
    <div class="flex w-full md:w-1/3 items-start justify-center md:justify-end">
