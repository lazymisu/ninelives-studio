---
import { urls } from "../config/urls";
import { schema } from "../config/schema";
---

<link rel="sitemap" href="/sitemap-index.xml">

<meta
    name="description"
    content="Estudio con sede en Argentina. Mezcla, mastering y postproducción de audio remota para artistas y productoras de todo el mundo."
/>
<meta
    name="keywords"
    content="mezcla, mastering, postproducción de audio, estudio remoto, audio profesional, estudio en Argentina, producción musical, sonido profesional"
/>

<meta name="author" content="Nine Lives Studio" />

<meta name="robots" content="index, follow" />

<meta
    property="og:title"
    content="Nine Lives Studio | Mezcla, Mastering y Postproducción de Audio"
/>
<meta
    property="og:description"
    content="Estudio con sede en Argentina. Mezcla, mastering y postproducción de audio remota para artistas y productoras de todo el mundo."
/>
<meta property="og:type" content="website" />
<meta property="og:url" content={urls.base} />
<meta
    property="og:image"
    content={urls.base + "/nls-og.jpeg"}
/>
<meta
    property="og:site_name"
    content="Nine Lives Studio | Mezcla, Mastering y Postproducción de Audio"
/>

<meta name="twitter:card" content="summary_large_image" />
<meta
    name="twitter:title"
    content="Nine Lives Studio | Mezcla, Mastering y Postproducción de Audio"
/>
<meta
    name="twitter:description"
    content="Estudio con sede en Argentina. Mezcla, mastering y postproducción de audio remota para artistas y productoras de todo el mundo."
/>
<meta
    name="twitter:image"
    content={urls.base + "/nls-og.jpeg"}
/>
<link rel="canonical" href={urls.base} />
<script type="application/ld+json" set:html={JSON.stringify(schema)}></script>
