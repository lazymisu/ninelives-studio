---
interface Props {
    type: string;
    title: string;
    url: string;
}

const { type, title, url } = Astro.props;

const typeEmoji = {
    "release": "🎧",
    "mix": "🎚️",
    "live recording": "🎤"
}[type] || "🎵";
---

<li class="flex items-center justify-between py-6">
    <span class="font-bold text-[22px] min-w-[40px]" style="color:var(--color-text-main);">{typeEmoji}</span>
    <div class="flex-1 flex flex-col items-start px-4">
        <span class="text-base font-medium" style="color:var(--color-text-main);">{title}</span>
        <span class="text-xs uppercase font-semibold mt-1" style="color:var(--color-text-accent);">{type}</span>
    </div>
    <a class="underline font-medium text-sm whitespace-nowrap" style="color:var(--color-primary);" href={url}>Escúchala aquí</a>
</li>
