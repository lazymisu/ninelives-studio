---
interface Props {
    type: string;
    title: string;
    url: string;
}

const { type, title, url } = Astro.props;

const typeEmoji =
    {
        release: "🎧",
        mix: "🎚️",
        "live recording": "🎤",
    }[type] || "🎵";
---

<li>
    <article class="flex items-center justify-between py-6">
        <span class="font-bold text-[22px] min-w-[40px]" aria-hidden="true"
            >{typeEmoji}</span
        >
        <div class="flex-1 flex flex-col items-start px-4">
            <span class="text-base font-medium text-primary">{title}</span>
            <span class="text-xs uppercase font-semibold mt-1 text-secondary"
                >{type}</span
            >
        </div>
        <a
            class="underline font-medium text-sm whitespace-nowrap text-accent"
            href={url}>Escúchala aquí</a
        >
    </article>
</li>
